---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout
  title="Fast Easy — Fasting Timer for iOS"
  description="A simple, beautiful fasting timer. No accounts, no tracking, no subscriptions. Just start your fast."
  ogImage="/img/fast-easy/icon.png"
  ogUrl="https://idlefusion.com/fast-easy"
>
  <Header />

  <main>
    <!-- Hero -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="hero-layout">
          <div class="hero-text">
            <h1 class="hero-title">
              Fasting,<br/>made <em>easy.</em>
            </h1>
            <p class="hero-subtitle">
              A simple, beautiful fasting timer for iOS. No accounts. No tracking. No subscriptions. Just start your fast.
            </p>
            <div class="hero-actions">
              <a href="https://apps.apple.com/app/fast-easy-fasting-timer/id6745400613" class="app-store-badge" target="_blank" rel="noopener noreferrer">
                <img src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg" alt="Download on the App Store" height="54" />
              </a>
            </div>
          </div>
          <div class="hero-icon">
            <img src="/img/fast-easy/icon.png" alt="Fast Easy app icon" class="icon-img" width="240" height="240" />
          </div>
        </div>
      </div>
    </section>

    <div class="section-divider"></div>

    <!-- Features -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="features-header">
          <span class="section-number">01 — FEATURES</span>
          <h2 class="features-title">Everything you need,<br/>nothing you don't.</h2>
        </div>

        <div class="features-grid">
          <div class="feature">
            <h3 class="feature-heading">Fasting Presets</h3>
            <p>12:12, 16:8, 18:6, 20:4, OMAD, and 36-hour fasts. Pick one and go — or count up from zero.</p>
          </div>

          <div class="feature">
            <h3 class="feature-heading">10 Timer Skins</h3>
            <p>Swipe through visual styles — minimal arcs, gradient rings, gauges, and more. Pick the one that fits your vibe.</p>
          </div>

          <div class="feature">
            <h3 class="feature-heading">Live Activities</h3>
            <p>Track your fast from the lock screen and Dynamic Island without opening the app.</p>
          </div>

          <div class="feature">
            <h3 class="feature-heading">Statistics & Streaks</h3>
            <p>Weekly charts, completion rates, total fasting hours, and current streak — all computed locally.</p>
          </div>

          <div class="feature">
            <h3 class="feature-heading">History</h3>
            <p>Every completed fast is saved. Review your progress, see your longest fasts, and stay motivated.</p>
          </div>

          <div class="feature">
            <h3 class="feature-heading">Completely Offline</h3>
            <p>No servers, no cloud sync, no network requests. Your data stays on your device. Period.</p>
          </div>
        </div>
      </div>
    </section>

    <div class="section-divider"></div>

    <!-- Privacy -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="privacy-section">
          <span class="section-number">02 — PRIVACY</span>
          <h2 class="privacy-title">Zero data collection.</h2>
          <p class="privacy-text">
            No analytics. No ads. No tracking pixels. No telemetry. Fast Easy doesn't even make network requests.
            Your fasting data lives on your device and nowhere else.
          </p>
          <a href="/fast-easy/privacy" class="btn btn-outline privacy-link">Read the full privacy policy</a>
        </div>
      </div>
    </section>

    <div class="section-divider"></div>

    <!-- CTA -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="cta-section">
          <h2 class="cta-title">Start fasting today.</h2>
          <p class="cta-text">Free on the App Store. No account required.</p>
          <a href="https://apps.apple.com/app/fast-easy-fasting-timer/id6745400613" class="app-store-badge" target="_blank" rel="noopener noreferrer">
            <img src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg" alt="Download on the App Store" height="54" />
          </a>
          <div class="cta-links">
            <a href="/fast-easy/support" class="link-accent">Support</a>
            <span class="cta-dot">&middot;</span>
            <a href="/fast-easy/privacy" class="link-accent">Privacy Policy</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero */
  .hero-layout {
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    gap: 3rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero-layout {
      flex-direction: row;
      text-align: left;
      gap: 4rem;
    }
  }

  .hero-text {
    flex: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .hero-title em {
    font-style: italic;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 480px;
    margin-bottom: 2rem;
  }

  @media (max-width: 767px) {
    .hero-subtitle {
      margin-left: auto;
      margin-right: auto;
    }
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .hero-actions {
      justify-content: flex-start;
    }
  }

  .app-store-badge {
    display: inline-block;
  }

  .app-store-badge img {
    height: 54px;
    transition: opacity 0.2s;
  }

  .app-store-badge:hover img {
    opacity: 0.8;
  }

  .hero-icon {
    flex-shrink: 0;
  }

  .icon-img {
    width: 180px;
    height: 180px;
    border-radius: 40px;
    box-shadow: var(--shadow-lg);
  }

  @media (min-width: 768px) {
    .icon-img {
      width: 240px;
      height: 240px;
      border-radius: 54px;
    }
  }

  /* Features */
  .features-header {
    margin-bottom: 3rem;
  }

  .features-title {
    font-size: clamp(1.75rem, 4vw, 3rem);
    color: var(--text-primary);
    margin-top: 1rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: 1fr 1fr 1fr;
    }
  }

  .feature {
    padding: 2rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 3px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .feature:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent);
  }

  .feature-heading {
    font-family: 'Satoshi', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    letter-spacing: 0;
    line-height: 1.4;
  }

  .feature p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Privacy */
  .privacy-section {
    max-width: 640px;
  }

  .privacy-title {
    font-size: clamp(1.75rem, 4vw, 3rem);
    color: var(--text-primary);
    margin-top: 1rem;
    margin-bottom: 1.5rem;
  }

  .privacy-text {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .privacy-link {
    font-size: 0.875rem;
  }

  /* CTA */
  .cta-section {
    text-align: center;
    max-width: 480px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .cta-text {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .cta-links {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 2rem;
    font-size: 0.875rem;
  }

  .cta-dot {
    color: var(--text-muted);
  }
</style>
