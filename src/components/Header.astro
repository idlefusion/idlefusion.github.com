---
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;

const navItems = [
  { href: '/#our-work', label: 'Work' },
  { href: '/#how-it-works', label: 'Process' },
  { href: '/#leadership', label: 'About' },
];
---

<header class="header">
  <nav class="nav-container">
    <div class="nav-inner">
      <!-- Logo / Wordmark -->
      <a href="/" class="logo">
        IDLE FUSION
      </a>

      <!-- Desktop Navigation -->
      <div class="nav-links">
        {navItems.map(item => (
          <a href={item.href} class="nav-link">
            {item.label}
          </a>
        ))}
      </div>

      <!-- Right side: Theme toggle + CTA -->
      <div class="nav-actions">
        <ThemeToggle />
        <a href="/contact" class="btn btn-primary nav-cta">
          Start a project
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="mobile-menu-btn md:hidden"
        id="mobile-menu-button"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <span class="sr-only">Open main menu</span>
        <svg class="menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M4 8h16M4 16h16" stroke-linecap="round"/>
        </svg>
        <svg class="close-icon hidden" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M6 6l12 12M6 18L18 6" stroke-linecap="round"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu hidden md:hidden" id="mobile-menu">
      <div class="mobile-menu-content">
        {navItems.map(item => (
          <a href={item.href} class="mobile-nav-link">
            {item.label}
          </a>
        ))}
        <div class="mobile-menu-footer">
          <div class="theme-row">
            <span class="theme-label" id="theme-mode-label">Dark mode</span>
            <ThemeToggle />
          </div>
          <a href="/contact" class="btn btn-primary w-full">
            Start a project
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.querySelector('.menu-icon');
  const closeIcon = document.querySelector('.close-icon');

  menuButton?.addEventListener('click', () => {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      menuButton?.setAttribute('aria-expanded', 'false');
    });
  });

  // Update theme label based on current mode
  function updateThemeLabel() {
    const label = document.getElementById('theme-mode-label');
    if (label) {
      const isDark = document.documentElement.classList.contains('dark');
      label.textContent = isDark ? 'Dark mode' : 'Light mode';
    }
  }

  // Initial update
  updateThemeLabel();

  // Watch for theme changes via MutationObserver
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.attributeName === 'class') {
        updateThemeLabel();
      }
    });
  });

  observer.observe(document.documentElement, { attributes: true });

  // Also update on Astro page transitions
  document.addEventListener('astro:after-swap', updateThemeLabel);
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
  }

  .nav-container {
    background: var(--bg-primary);
    border-bottom: 1px solid var(--border-color);
    transition: all 0.3s;
  }

  .nav-inner {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }

  @media (min-width: 640px) {
    .nav-inner {
      padding: 0 2rem;
    }
  }

  @media (min-width: 1024px) {
    .nav-inner {
      padding: 0 3rem;
    }
  }

  /* Logo */
  .logo {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.8125rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .logo:hover {
    color: var(--accent);
  }

  /* Desktop nav links */
  .nav-links {
    display: none;
    align-items: center;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .nav-links {
      display: flex;
    }
  }

  .nav-link {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    position: relative;
    padding: 0.25rem 0;
    transition: color 0.2s;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent);
    transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Right actions */
  .nav-actions {
    display: none;
    align-items: center;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .nav-actions {
      display: flex;
    }
  }

  .nav-cta {
    font-size: 0.8125rem;
    padding: 0.625rem 1.25rem;
  }

  /* Mobile menu button */
  .mobile-menu-btn {
    padding: 0.5rem;
    color: var(--text-primary);
    transition: color 0.2s;
    background: none;
    border: none;
    cursor: pointer;
  }

  .mobile-menu-btn:hover {
    color: var(--accent);
  }

  /* Mobile menu */
  .mobile-menu-content {
    padding: 1.5rem;
    background: var(--bg-primary);
    border-top: 1px solid var(--border-color);
  }

  .mobile-nav-link {
    display: block;
    padding: 1rem 0;
    font-family: 'Satoshi', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
    border-bottom: 1px solid var(--border-color);
    transition: color 0.2s;
  }

  .mobile-nav-link:hover {
    color: var(--accent);
  }

  .mobile-menu-footer {
    margin-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .theme-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0;
  }

  .theme-label {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  /* Utility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
