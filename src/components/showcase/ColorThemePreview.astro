---
interface Props {
  name: string;
  accent: string;
  accentLight: string;
  accentDark: string;
  description: string;
}

const { name, accent, accentLight, accentDark, description } = Astro.props;
---

<div class="theme-preview">
  <!-- Color Swatches -->
  <div class="swatches">
    <div class="swatch swatch-dark" style={`background-color: ${accentDark};`}>
      <span class="swatch-label">Dark</span>
      <span class="swatch-value">{accentDark}</span>
    </div>
    <div class="swatch swatch-main" style={`background-color: ${accent};`}>
      <span class="swatch-label">Main</span>
      <span class="swatch-value">{accent}</span>
    </div>
    <div class="swatch swatch-light" style={`background-color: ${accentLight};`}>
      <span class="swatch-label">Light</span>
      <span class="swatch-value">{accentLight}</span>
    </div>
  </div>

  <!-- Theme Name -->
  <h3 class="theme-name">{name}</h3>

  <!-- Sample UI Elements -->
  <div class="sample-ui">
    <button class="sample-btn primary" style={`background-color: ${accent}; --hover-bg: ${accentDark};`}>
      Primary Button
    </button>
    <button class="sample-btn outline" style={`color: ${accent}; border-color: ${accent}; --hover-bg: ${accent};`}>
      Outline Button
    </button>
  </div>

  <!-- Sample Link -->
  <p class="sample-text">
    This is sample body text with an <a href="#" class="sample-link" style={`color: ${accent};`}>accent link</a> to show how the color integrates.
  </p>

  <!-- Description -->
  <p class="description">{description}</p>
</div>

<style>
  .theme-preview {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .swatches {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .swatch {
    flex: 1;
    height: 4rem;
    border-radius: 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.75rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .swatch-label {
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .swatch-value {
    font-family: monospace;
    opacity: 0.9;
  }

  .theme-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1rem;
  }

  .sample-ui {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .sample-btn {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .sample-btn.primary {
    color: white;
    border: none;
  }

  .sample-btn.primary:hover {
    background-color: var(--hover-bg) !important;
  }

  .sample-btn.outline {
    background: transparent;
    border: 2px solid;
  }

  .sample-btn.outline:hover {
    background-color: var(--hover-bg) !important;
    color: white !important;
  }

  .sample-text {
    font-size: 0.875rem;
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .sample-link {
    text-decoration: underline;
    font-weight: 500;
  }

  .sample-link:hover {
    opacity: 0.8;
  }

  .description {
    font-size: 0.875rem;
    color: #9ca3af;
    font-style: italic;
    border-top: 1px solid #f3f4f6;
    padding-top: 1rem;
    margin: 0;
  }
</style>
