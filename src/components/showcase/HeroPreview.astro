---
interface Props {
  name: string;
  style: 'mesh' | 'geometric' | 'orbs';
  description: string;
}

const { name, style, description } = Astro.props;
---

<div class="hero-preview-wrapper">
  <div class={`hero-preview hero-${style}`}>
    <div class="hero-content">
      <span class="hero-tag">Consulting</span>
      <h2 class="hero-title">Transform Your Digital Presence</h2>
      <p class="hero-subtitle">Expert solutions for modern businesses</p>
      <div class="hero-buttons">
        <button class="btn-primary">Get Started</button>
        <button class="btn-secondary">Learn More</button>
      </div>
    </div>

    {style === 'mesh' && (
      <div class="mesh-bg">
        <div class="mesh-blob mesh-1"></div>
        <div class="mesh-blob mesh-2"></div>
        <div class="mesh-blob mesh-3"></div>
      </div>
    )}

    {style === 'geometric' && (
      <div class="geometric-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
      </div>
    )}

    {style === 'orbs' && (
      <div class="orbs-container">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
      </div>
    )}
  </div>

  <div class="preview-info">
    <h4 class="preview-name">{name}</h4>
    <p class="preview-description">{description}</p>
  </div>
</div>

<style>
  .hero-preview-wrapper {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .hero-preview {
    position: relative;
    padding: 3rem 2rem;
    overflow: hidden;
    min-height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 500px;
  }

  .hero-tag {
    display: inline-block;
    padding: 0.375rem 1rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    color: white;
    margin-bottom: 1rem;
  }

  .hero-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
  }

  .hero-buttons {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
  }

  .btn-primary {
    padding: 0.625rem 1.25rem;
    background: white;
    color: #111827;
    border: none;
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
  }

  .btn-secondary {
    padding: 0.625rem 1.25rem;
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
  }

  .preview-info {
    padding: 1.25rem 1.5rem;
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
  }

  .preview-name {
    font-size: 1rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.375rem;
  }

  .preview-description {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
    line-height: 1.5;
  }

  /* Mesh Gradient Style */
  .hero-mesh {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  }

  .mesh-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .mesh-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.6;
  }

  .mesh-1 {
    width: 300px;
    height: 300px;
    background: #3b82f6;
    top: -100px;
    left: -50px;
  }

  .mesh-2 {
    width: 250px;
    height: 250px;
    background: #8b5cf6;
    bottom: -80px;
    right: -30px;
  }

  .mesh-3 {
    width: 200px;
    height: 200px;
    background: #ec4899;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Geometric Style */
  .hero-geometric {
    background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%);
  }

  .geometric-shapes {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    border: 2px solid rgba(255, 255, 255, 0.1);
  }

  .shape-1 {
    width: 100px;
    height: 100px;
    top: 20px;
    right: 10%;
    transform: rotate(15deg);
  }

  .shape-2 {
    width: 60px;
    height: 60px;
    bottom: 30px;
    left: 15%;
    border-radius: 50%;
  }

  .shape-3 {
    width: 80px;
    height: 80px;
    top: 40%;
    left: 5%;
    transform: rotate(-30deg);
    border-radius: 0.5rem;
  }

  .shape-4 {
    width: 120px;
    height: 120px;
    bottom: 20%;
    right: 5%;
    clip-path: polygon(50% 0%, 100% 100%, 0% 100%);
    background: rgba(255, 255, 255, 0.05);
    border: none;
  }

  /* Gradient Orbs Style */
  .hero-orbs {
    background: linear-gradient(135deg, #0c4a6e 0%, #164e63 100%);
  }

  .orbs-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
  }

  .orb-1 {
    width: 150px;
    height: 150px;
    background: radial-gradient(circle, rgba(34, 211, 238, 0.4), transparent 70%);
    top: 10%;
    right: 10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.3), transparent 70%);
    bottom: 5%;
    left: 10%;
    animation-delay: 2s;
  }

  .orb-3 {
    width: 100px;
    height: 100px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.4), transparent 70%);
    top: 50%;
    left: 40%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }
</style>
