---
interface Props {
  name: string;
  role: string;
  image: string;
  bio: string;
  socialLinks?: {
    linkedin?: string;
    github?: string;
  };
  additionalContent?: string;
}

const { name, role, image, bio, socialLinks, additionalContent } = Astro.props;
---

<div class="team-card">
  <div class="card-layout">
    <div class="image-column">
      <img src={image} alt={name} class="avatar">
    </div>

    <div class="content-column">
      <h3 class="name">{name}</h3>
      <p class="role">{role}</p>

      <div class="bio-content">
        <p class="bio">{bio}</p>
        {additionalContent && (
          <p class="bio">{additionalContent}</p>
        )}
      </div>

      {socialLinks && (
        <div class="social-links">
          {socialLinks.linkedin && (
            <a href={socialLinks.linkedin} class="social-link" target="_blank" rel="noopener noreferrer">
              LinkedIn
              <svg width="14" height="14" viewBox="0 0 16 16" fill="none">
                <path d="M4 12L12 4M12 4H6M12 4V10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          )}
          {socialLinks.github && (
            <a href={socialLinks.github} class="social-link" target="_blank" rel="noopener noreferrer">
              GitHub
              <svg width="14" height="14" viewBox="0 0 16 16" fill="none">
                <path d="M4 12L12 4M12 4H6M12 4V10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .team-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    padding: 2.5rem;
  }

  .card-layout {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 640px) {
    .card-layout {
      flex-direction: row;
      align-items: flex-start;
      text-align: left;
    }
  }

  .image-column {
    flex-shrink: 0;
  }

  .avatar {
    width: 6rem;
    height: 6rem;
    object-fit: cover;
    border: 2px solid var(--border-color);
  }

  @media (min-width: 640px) {
    .avatar {
      width: 7rem;
      height: 7rem;
    }
  }

  .content-column {
    flex: 1;
    min-width: 0;
  }

  .name {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
    line-height: 1.2;
  }

  .role {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--accent);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 1.25rem;
  }

  .bio-content {
    margin-bottom: 1.5rem;
  }

  .bio {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0 0 0.75rem 0;
  }

  .bio:last-child {
    margin-bottom: 0;
  }

  .social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .social-links {
      justify-content: flex-start;
    }
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: 'Satoshi', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .social-link:hover {
    color: var(--accent);
  }

  .social-link svg {
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .social-link:hover svg {
    transform: translate(2px, -2px);
  }
</style>
