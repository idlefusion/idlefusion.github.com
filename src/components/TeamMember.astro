---
interface Props {
  name: string;
  role: string;
  image: string;
  bio: string;
  socialLinks?: {
    linkedin?: string;
    github?: string;
  };
  additionalContent?: string;
}

const { name, role, image, bio, socialLinks, additionalContent } = Astro.props;
---

<div class="team-card">
  <div class="p-8 md:p-12 text-center">
    <img
      src={image}
      alt={name}
      class="w-28 h-28 md:w-32 md:h-32 rounded-full object-cover mx-auto mb-6 border-4 border-gray-100"
    >
    <h3 class="text-2xl font-bold text-gray-900 mb-2">{name}</h3>
    <p class="text-gray-500 mb-6 font-medium">{role}</p>
    <p class="text-gray-600 mb-4 max-w-2xl mx-auto leading-relaxed">{bio}</p>
    {additionalContent && (
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto leading-relaxed">{additionalContent}</p>
    )}

    {socialLinks && (
      <div class="flex justify-center gap-4 mt-8">
        {socialLinks.linkedin && (
          <a
            href={socialLinks.linkedin}
            class="btn btn-outline"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-linkedin mr-2"></i>LinkedIn
          </a>
        )}
        {socialLinks.github && (
          <a
            href={socialLinks.github}
            class="btn btn-outline"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-github mr-2"></i>GitHub
          </a>
        )}
      </div>
    )}
  </div>
</div>

<style>
  .team-card {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid #f3f4f6;
  }
</style>
