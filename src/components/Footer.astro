---
interface Props {
  variant?: 'full' | 'compact';
}

const { variant = 'full' } = Astro.props;

const socialLinks = [
  { href: 'https://github.com/idlefusion', label: 'GitHub' },
  { href: 'https://linkedin.com/in/mps', label: 'LinkedIn' },
];

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-inner">
    <!-- Main content -->
    <div class="footer-main">
      <!-- Left side - CTA -->
      <div class="footer-cta">
        <h3 class="cta-title">Let's build something extraordinary.</h3>
        <a href="/contact" class="cta-email">
          hello@idlefusion.com
          <svg class="arrow" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>

      <!-- Right side - Social -->
      <div class="footer-social">
        {socialLinks.map(link => (
          <a
            href={link.href}
            class="social-link"
            target="_blank"
            rel="noopener noreferrer"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>

    <!-- Divider -->
    <div class="footer-divider"></div>

    <!-- Bottom row -->
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} Idle Fusion LLC
      </p>
      <a href="/#home" class="back-to-top">
        Back to top
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M8 12V4M8 4L4 8M8 4L12 8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--ink);
    color: var(--paper);
    padding: 4rem 0 2rem;
    margin-top: auto;
  }

  .dark .footer {
    background: #0a0a0a;
    border-top: 1px solid var(--border-color);
  }

  .footer-inner {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media (min-width: 640px) {
    .footer-inner {
      padding: 0 2rem;
    }
  }

  @media (min-width: 1024px) {
    .footer-inner {
      padding: 0 3rem;
    }
  }

  .footer-main {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .footer-main {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  /* CTA section */
  .footer-cta {
    max-width: 400px;
  }

  .cta-title {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 400;
    color: var(--paper);
    line-height: 1.15;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .cta-email {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Satoshi', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: var(--paper);
    text-decoration: none;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .cta-email:hover {
    opacity: 1;
    color: var(--accent-soft);
  }

  .cta-email .arrow {
    transition: transform 0.3s ease;
  }

  .cta-email:hover .arrow {
    transform: translateX(4px);
  }

  /* Social links */
  .footer-social {
    display: flex;
    gap: 2rem;
  }

  .social-link {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--paper);
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.2s;
    position: relative;
  }

  .social-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent);
    transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .social-link:hover {
    opacity: 1;
  }

  .social-link:hover::after {
    width: 100%;
  }

  /* Divider */
  .footer-divider {
    height: 1px;
    background: rgba(250, 250, 249, 0.1);
    margin: 3rem 0 1.5rem;
  }

  /* Bottom row */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .copyright {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.8125rem;
    color: var(--paper);
    opacity: 0.4;
    margin: 0;
  }

  .back-to-top {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: 'Satoshi', sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--paper);
    text-decoration: none;
    opacity: 0.6;
    transition: all 0.2s;
  }

  .back-to-top:hover {
    opacity: 1;
    color: var(--accent-soft);
  }

  .back-to-top svg {
    transition: transform 0.2s;
  }

  .back-to-top:hover svg {
    transform: translateY(-2px);
  }
</style>
