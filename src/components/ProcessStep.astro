---
interface Props {
  title: string;
  description: string;
  step: number;
}

const { title, description, step } = Astro.props;
---

<div class="process-step">
  <div class="step-number">{step}</div>
  <h4 class="title">{title}</h4>
  <p class="description">{description}</p>
</div>

<style>
  .process-step {
    text-align: center;
    padding: 2rem 1.5rem;
    height: 100%;
  }

  .step-number {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
    color: white;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.75rem;
  }

  .description {
    color: #6b7280;
    line-height: 1.6;
  }
</style>
