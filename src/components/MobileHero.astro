---
interface Props {
  tagline?: string;
  title: string;
  subtitle: string;
  primaryCTA: { text: string; href: string };
}

const { tagline, title, subtitle, primaryCTA } = Astro.props;
---

<section class="mobile-hero lg:hidden">
  <!-- Subtle grid background -->
  <div class="grid-bg"></div>

  <!-- Accent decoration -->
  <div class="accent-blur"></div>

  <div class="hero-content">
    <!-- Header Section -->
    <div class="header-section">
      {tagline && (
        <p class="tagline">
          <span class="tagline-dot"></span>
          {tagline}
        </p>
      )}

      <h1 class="brand-title">
        <span class="title-line">We build</span>
        <span class="title-line title-accent">digital products</span>
        <span class="title-line">that <em>work.</em></span>
      </h1>

      <p class="tagline-text">{subtitle}</p>

      <a href={primaryCTA.href} class="cta-button">
        {primaryCTA.text}
        <svg class="btn-arrow" width="18" height="18" viewBox="0 0 20 20" fill="none">
          <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>

    <!-- Quick Links Stack -->
    <div class="cards-stack">
      <a href="#services" class="priority-card">
        <span class="card-number">01</span>
        <div class="card-content">
          <h3 class="card-title">What We Do</h3>
          <p class="card-desc">Mobile & web apps that delight users</p>
        </div>
        <svg class="card-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <a href="#our-work" class="priority-card">
        <span class="card-number">02</span>
        <div class="card-content">
          <h3 class="card-title">Our Work</h3>
          <p class="card-desc">Golf Channel, Radio Disney & more</p>
        </div>
        <svg class="card-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <a href="#testimonials" class="priority-card">
        <span class="card-number">03</span>
        <div class="card-content">
          <h3 class="card-title">Client Reviews</h3>
          <p class="card-desc">"Exceeded expectations..." â€” 5 stars</p>
        </div>
        <svg class="card-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <a href="#leadership" class="priority-card">
        <span class="card-number">04</span>
        <div class="card-content">
          <h3 class="card-title">About</h3>
          <p class="card-desc">15+ years building for Fortune 500</p>
        </div>
        <svg class="card-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .mobile-hero {
    background: var(--bg-primary);
    position: relative;
    overflow: hidden;
    min-height: 100vh;
    min-height: 100dvh;
    padding-top: 80px;
  }

  /* Subtle grid background */
  .grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(to right, var(--border-color) 1px, transparent 1px),
      linear-gradient(to bottom, var(--border-color) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.4;
    pointer-events: none;
  }

  /* Accent blur decoration */
  .accent-blur {
    position: absolute;
    top: 10%;
    right: -20%;
    width: 300px;
    height: 250px;
    background: var(--accent);
    opacity: 0.08;
    border-radius: 50%;
    filter: blur(80px);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  /* Header Section */
  .header-section {
    text-align: center;
  }

  .tagline {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
  }

  .tagline-dot {
    width: 5px;
    height: 5px;
    background: var(--accent);
    border-radius: 50%;
  }

  .brand-title {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: 2.75rem;
    font-weight: 400;
    color: var(--text-primary);
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 1.25rem;
  }

  .title-line {
    display: block;
  }

  .title-accent {
    position: relative;
    display: inline;
    background: linear-gradient(to bottom, transparent 60%, rgba(0, 136, 204, 0.2) 60%);
  }

  .brand-title em {
    font-style: italic;
  }

  .tagline-text {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1.75rem;
    max-width: 320px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: var(--ink);
    color: var(--paper);
    font-family: 'Satoshi', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 1rem 2rem;
    border-radius: 2px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .dark .cta-button {
    background: var(--paper);
    color: #0a0a0a;
  }

  .cta-button:active {
    transform: scale(0.98);
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  /* Cards Stack */
  .cards-stack {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .priority-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .priority-card:active {
    transform: scale(0.98);
    border-color: var(--accent);
  }

  .card-number {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
    font-weight: 500;
    min-width: 24px;
  }

  .card-content {
    flex: 1;
    min-width: 0;
  }

  .card-title {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.125rem;
  }

  .card-desc {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.8125rem;
    color: var(--text-muted);
    line-height: 1.4;
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .card-arrow {
    color: var(--text-muted);
    opacity: 0.5;
    transition: all 0.3s ease;
  }

  .priority-card:active .card-arrow {
    color: var(--accent);
    opacity: 1;
    transform: translateX(2px);
  }

  /* Hide on desktop */
  @media (min-width: 1024px) {
    .mobile-hero {
      display: none;
    }
  }
</style>
