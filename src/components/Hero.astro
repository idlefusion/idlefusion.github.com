---
interface Props {
  tagline?: string;
  title: string;
  subtitle: string;
  primaryCTA: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
}

const { tagline, title, subtitle, primaryCTA, secondaryCTA } = Astro.props;
---

<section id="home" class="hero">
  <!-- Subtle grid background -->
  <div class="grid-bg"></div>

  <!-- Accent brush stroke decoration -->
  <div class="brush-stroke"></div>

  <div class="hero-content">
    <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
      <div class="hero-layout">
        <!-- Main Content -->
        <div class="content-area">
          {tagline && (
            <p class="tagline animate-fade-in" style="animation-delay: 0.1s">
              <span class="tagline-dot"></span>
              {tagline}
            </p>
          )}

          <h1 class="hero-title">
            <span class="title-line animate-fade-in" style="animation-delay: 0.2s">Technology that</span>
            <span class="title-line title-accent animate-fade-in" style="animation-delay: 0.35s">
              accelerates
              <span class="accent-underline"></span>
            </span>
            <span class="title-line animate-fade-in" style="animation-delay: 0.5s">your</span>
            <span class="title-line title-italic animate-fade-in" style="animation-delay: 0.65s">mission.</span>
          </h1>

          <p class="hero-subtitle animate-fade-in" style="animation-delay: 0.8s">
            {subtitle}
          </p>

          <div class="cta-group animate-fade-in" style="animation-delay: 0.95s">
            <a href={primaryCTA.href} class="btn btn-primary text-base px-8 py-4">
              {primaryCTA.text}
              <svg class="btn-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            {secondaryCTA && (
              <a href={secondaryCTA.href} class="btn btn-outline text-base px-6 py-4">
                {secondaryCTA.text}
              </a>
            )}
          </div>
        </div>

        <!-- Side decoration - floating service cards -->
        <div class="decoration-area">
          <div class="service-stack">
            <div class="service-card card-1">
              <span class="service-number">01</span>
              <span class="service-name">Mobile Apps</span>
            </div>
            <div class="service-card card-2">
              <span class="service-number">02</span>
              <span class="service-name">Web Development</span>
            </div>
            <div class="service-card card-3">
              <span class="service-number">03</span>
              <span class="service-name">Digital Strategy</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Client bar -->
      <div class="client-bar animate-fade-in" style="animation-delay: 1.1s">
        <div class="client-divider"></div>
        <p class="client-text">
          Trusted by teams at <span class="client-highlight">Disney</span>, <span class="client-highlight">Golf Channel</span>, and <span class="client-highlight">North Point Ministries</span>
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background: var(--bg-primary);
    position: relative;
    overflow: hidden;
    min-height: 90vh;
    display: flex;
    align-items: center;
    padding: 6rem 0 4rem;
  }

  /* Subtle grid background */
  .grid-bg {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(to right, var(--border-color) 1px, transparent 1px),
      linear-gradient(to bottom, var(--border-color) 1px, transparent 1px);
    background-size: 80px 80px;
    opacity: 0.4;
    pointer-events: none;
  }

  /* Vermillion brush stroke accent */
  .brush-stroke {
    position: absolute;
    top: 20%;
    right: -5%;
    width: 400px;
    height: 300px;
    background: var(--accent);
    opacity: 0.06;
    border-radius: 50% 30% 50% 30%;
    transform: rotate(-15deg);
    filter: blur(60px);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
  }

  .hero-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
    min-height: 60vh;
  }

  @media (min-width: 1024px) {
    .hero-layout {
      grid-template-columns: 1.2fr 0.8fr;
      gap: 6rem;
    }
  }

  /* Tagline */
  .tagline {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    color: var(--text-muted);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 2rem;
  }

  .tagline-dot {
    width: 6px;
    height: 6px;
    background: var(--accent);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.3); }
  }

  /* Hero Title â€” Dramatic typography */
  .hero-title {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: clamp(3rem, 8vw, 5.5rem);
    font-weight: 400;
    color: var(--text-primary);
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 2.5rem;
  }

  .title-line {
    display: block;
  }

  .title-accent {
    position: relative;
    display: inline-block;
  }

  .accent-underline {
    position: absolute;
    bottom: 0.1em;
    left: 0;
    width: 100%;
    height: 0.12em;
    background: var(--accent);
    opacity: 0.7;
    transform: scaleX(0);
    transform-origin: left;
    animation: drawUnderline 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.6s;
  }

  @keyframes drawUnderline {
    to {
      transform: scaleX(1);
    }
  }

  .title-italic {
    font-style: italic;
  }

  /* Subtitle */
  .hero-subtitle {
    font-family: 'Satoshi', sans-serif;
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 480px;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  /* CTA Group */
  .cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .btn-arrow {
    margin-left: 0.5rem;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .btn:hover .btn-arrow {
    transform: translateX(4px);
  }

  /* Decoration area - service cards */
  .decoration-area {
    display: none;
  }

  @media (min-width: 1024px) {
    .decoration-area {
      display: block;
      position: relative;
      height: 400px;
    }
  }

  .service-stack {
    position: relative;
    height: 100%;
  }

  .service-card {
    position: absolute;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    padding: 1.25rem 1.75rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: var(--shadow-md);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .service-card:hover {
    transform: translateY(-4px) rotate(0deg) !important;
    box-shadow: var(--shadow-lg);
    border-color: var(--accent);
  }

  .service-number {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
    font-weight: 500;
  }

  .service-name {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  .card-1 {
    top: 10%;
    left: 10%;
    transform: rotate(-2deg);
    animation: float 5s ease-in-out infinite;
  }

  .card-2 {
    top: 40%;
    left: 25%;
    transform: rotate(1deg);
    animation: float 5s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  .card-3 {
    top: 70%;
    left: 5%;
    transform: rotate(-1deg);
    animation: float 5s ease-in-out infinite;
    animation-delay: 1s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(var(--rotation, 0deg));
    }
    50% {
      transform: translateY(-12px) rotate(var(--rotation, 0deg));
    }
  }

  /* Client bar */
  .client-bar {
    margin-top: 4rem;
    padding-top: 2rem;
  }

  .client-divider {
    width: 100%;
    height: 1px;
    background: var(--border-color);
    margin-bottom: 1.5rem;
  }

  .client-text {
    font-family: 'Satoshi', sans-serif;
    font-size: 0.875rem;
    color: var(--text-muted);
    letter-spacing: 0.01em;
  }

  .client-highlight {
    color: var(--text-primary);
    font-weight: 500;
  }

  /* Animation utility */
  .animate-fade-in {
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
