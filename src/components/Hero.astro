---
interface Props {
  tagline?: string;
  title: string;
  subtitle: string;
  primaryCTA: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
}

const { tagline, title, subtitle, primaryCTA, secondaryCTA } = Astro.props;
---

<section id="home" class="hero">
  <div class="hero-content">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center min-h-[70vh] py-16">
        <!-- Content -->
        <div class="text-center lg:text-left">
          {tagline && (
            <p class="text-white/50 mb-3 text-sm font-medium">
              <i class="fas fa-users mr-2"></i>{tagline}
            </p>
          )}
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-white">
            {title}
          </h1>
          <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-2xl mx-auto lg:mx-0 leading-relaxed">
            {subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href={primaryCTA.href} class="btn btn-light text-lg px-8 py-4">
              {primaryCTA.text}
            </a>
            {secondaryCTA && (
              <a href={secondaryCTA.href} class="btn btn-outline-light text-lg px-6 py-4">
                {secondaryCTA.text}
              </a>
            )}
          </div>
        </div>

        <!-- Floating Cards -->
        <div class="hidden lg:block relative h-[400px]">
          <div class="floating-card card-1">
            <i class="fas fa-mobile-alt text-4xl mb-3"></i>
            <h5 class="font-semibold text-lg">Mobile Apps</h5>
          </div>
          <div class="floating-card card-2">
            <i class="fas fa-code text-4xl mb-3"></i>
            <h5 class="font-semibold text-lg">Web Development</h5>
          </div>
          <div class="floating-card card-3">
            <i class="fas fa-chart-line text-4xl mb-3"></i>
            <h5 class="font-semibold text-lg">Digital Strategy</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .floating-card {
    position: absolute;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    padding: 1.5rem 2rem;
    text-align: center;
    color: white;
    animation: float 3s ease-in-out infinite;
  }

  .card-1 {
    top: 10%;
    left: 15%;
  }

  .card-2 {
    top: 35%;
    right: 10%;
    animation-delay: 0.5s;
  }

  .card-3 {
    bottom: 15%;
    left: 25%;
    animation-delay: 1s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }
</style>
